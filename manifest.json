{
  "name": "RiptheRep",
  "version": "0.5",
  "manifest_version": 2,
  "description": "This extension allows the users to unlock the content of rep.repubblica.it and remove the 5 article per day limit on ilsole24ore.com.",

  "icons": {
    "24": "icon24.png",
    "48": "icon48.png"},

  "browser_action": {
    "default_icon": "icon24.png",
    "default_title": "",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["*://rep.repubblica.it/*", "*://www.ilsole24ore.com/*"],
    "js": ["content_script.js"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": ["content_script.js"]
}
