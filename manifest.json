{
  "name": "RiptheRep",
  "version": "0.6.1",
  "manifest_version": 2,
  "description": "This extension allows the users to remove the paywall and unlock the content of some Italian news websites.",

  "icons": {
    "24": "icon24.png",
    "48": "icon48.png"},

  "browser_action": {
    "default_icon": "icon24.png",
    "default_title": "",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["*://rep.repubblica.it/*", "*://www.ilsole24ore.com/*", "*://iltirreno.gelocal.it/*", "*://www.limesonline.com/*"],
    "js": ["content_script.js"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": ["content_script.js"],

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
]

}
